{
    "compilerOptions": {
        "module": "ES6",
        "lib": [
            "dom",
            "esnext"
        ],
        "removeComments": false,
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "outDir": "./lib",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "listEmittedFiles": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}